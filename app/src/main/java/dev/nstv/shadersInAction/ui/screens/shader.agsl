half4 main(float2 fragCoord) {
    uniform float2 size;

    if(fragCoord.x < size/2.0){
        return half4(1.0, 0.0, 0.0, 1.0); //RED
    }
    return half4(0.0, 0.0, 1.0, 1.0);//BLUE
}

